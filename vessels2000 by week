#data to json
#install
install.packages("jsonlite", repos="http://cran.r-project.org")

#load
library(jsonlite)

#convert object to json
botnvSw158.json <- toJSON(botnvSw158, pretty=TRUE)
cat(myjson)

#convert json back to object
botnvSw158 <- fromJSON(botnvSw158.json)
print(botnvSw158)
